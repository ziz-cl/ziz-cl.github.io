{
  "manifest_version": 3,
  "name": "QuickRequest",
  "version": "1.0.0",
  "description": "사이트별 프리셋으로 빠르게 HTTP POST 요청을 보내는 확장 프로그램",
  "permissions": [
    "activeTab",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
